<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.dnlab.domain.book.repository.BookRepository">

    <!-- 도서 추가 -->
    <insert id="insertBook">
        INSERT INTO BOOK(TITLE, AUTHOR, BORROWYN)
        VALUES (#{title}, #{author}, #{borrowYN})
    </insert>


    <!-- 전체 도서 조회 -->
    <select id="getAllBook" resultType="com.example.dnlab.domain.book.entity.Book">
        select * from book;
    </select>

    <!-- pk로 도서 조회 -->
    <select id="getBookByNum" resultType="com.example.dnlab.domain.book.entity.Book">
        select * from book where num = #{bookNum}
    </select>

    <update id="updateBorrowY" parameterType="map">
        update book set borrowYN = true where num = #{num}
    </update>

    <update id="updateBorrowN" parameterType="map">
        update book set borrowYN = false where num = #{num}
    </update>

</mapper>