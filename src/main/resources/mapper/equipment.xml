<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.dnlab.domain.equipment.repository.EquipmentMapper">


    <insert id="createEquipment" >
        INSERT INTO equipment (name, purchase_date, price)
        VALUES (#{name}, #{purchase_date}, #{price})
    </insert>

    <!-- 전체 장비 조회 -->
    <select id="getAllEquipment" resultType="com.example.dnlab.domain.equipment.entity.Equipment">
        select * from Equipment;
    </select>
    <!-- pk로 장비 조회 -->
    <select id="getEquipmentByNum" resultType="com.example.dnlab.domain.equipment.entity.Equipment">
        select * from book where num = #{bookNum}
    </select>

    <update id="updateUsingY" parameterType="map">
        update equipment set usingYN = true where num = #{num}
    </update>
    <update id="updateUsingN" parameterType="map">
        update equipment set usingYN = false where num = #{num}
    </update>


</mapper>