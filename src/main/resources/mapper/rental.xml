<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.dnlab.domain.book.repository.RentalMapper">

    <!-- 대여 기록 추가 -->
    <insert id="insertRentInfo">
        INSERT INTO rental(user_num, book_num, rent_start_date)
        VALUES (#{user_num}, #{book_num}, #{rent_start_date})
    </insert>

    <select id="selectRentalByBookNum" resultType="com.example.dnlab.domain.book.entity.Rental">
        select * from rental where book_num = #{book_num}
    </select>

    <update id="updateRentInfo" parameterType="map">
        UPDATE rental SET rent_end_date = #{rent_end_date} WHERE num = #{num}
    </update>
</mapper>