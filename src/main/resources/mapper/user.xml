<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.dnlab.domain.user.repository.UserMapper">

    <!-- 회원 가입 중복 검사-->
    <select id = "getUserById" resultType="com.example.dnlab.domain.user.entity.User">
        SELECT ID FROM USER
        WHERE ID = #{id}
    </select>

    <!-- 회원 가입 -->
    <insert id="insertUser">
        INSERT INTO USER(NAME, ID, PW)
        VALUES (#{name},  #{id}, #{pw})
    </insert>

    <!-- 로그인 -->
    <select id="selectUserById" resultType="User">
        SELECT * FROM USER
        WHERE ID = #{id}
    </select>

    <!-- 회원 pk 가져오기 -->
    <select id="getUserNumById">
        SELECT NUM FROM USER WHERE ID = #{id}
    </select>

    <!-- 회원 전원 조회 -->
    <select id="getAllUser" resultType="User">
        SELECT NAME, STUDENTID FROM USER
    </select>

    <select id="getUserByNum" resultType="com.example.dnlab.domain.user.entity.User">
        SELECT * FROM USER WHERE NUM = #{userNum}
    </select>

    <update id="updateUserGeneration">
        UPDATE user
        SET generation = #{generation},leaderYN=false
        WHERE num = #{user_num}
    </update>
</mapper>